{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        { // use system gdb, upstream gdb is supposed to have support for HIP debugging
            "name": "(gdb) Fabsu",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/fabsu",
            //"program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "launchCompleteCommand": "exec-run",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        { // https://github.com/microsoft/vscode-cpptools/issues/3648
          // stepping into functions does not work
            "name": "(rocgdb) Fabsu",
            "type": "cppdbg",
            "request": "launch",
            //"program": "${command:cmake.launchTargetPath}",
            "program": "${workspaceFolder}/build/fabsu",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/rocgdb",
            "launchCompleteCommand": "exec-run"
        },
        {
            "type": "cmake",
            "request": "launch",
            "name": "CMake: Configure project",
            "cmakeDebugType": "configure",
            "clean": false,
            "configureAll": false
        }
    ]
}